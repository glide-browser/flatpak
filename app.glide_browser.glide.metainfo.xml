<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>app.glide_browser.glide</id>

  <name>Glide</name>
  <summary>An extensible and keyboard-focused web browser</summary>

  <metadata_license>MIT</metadata_license>
  <project_license>MPL-2.0</project_license>

  <developer id="app.glide-browser">
    <name>Glide Browser Developers</name>
  </developer>

  <content_rating type="oars-1.1" />

  <description>
    <p>
      An extensible and keyboard-focused web browser built on Firefox.
    </p>
    <ul>
      <li>Navigate the web with just a keyboard</li>
      <li>Modal based keymaps</li>
      <li>TypeScript config</li>
      <li>Web extensions API support</li>
      <li>Fuzzy tab manager</li>
      <li>... and more</li>
    </ul>
  </description>

  <url type="homepage">https://glide-browser.app</url>
  <url type="bugtracker">https://github.com/glide-browser/glide/discussions</url>
  <url type="help">https://glide-browser.app</url>
  <url type="faq">https://glide-browser.app/faq</url>
  <url type="vcs-browser">https://github.com/glide-browser</url>
  <url type="contribute">https://glide-browser.app/contributing</url>

  <screenshots>
    <screenshot type="default">
      <image>https://media.githubusercontent.com/media/glide-browser/flatpak/0.1.53a/assets/hints.png</image>
    </screenshot>
  </screenshots>

  <launchable type="desktop-id">app.glide_browser.glide.desktop</launchable>

  <recommends>
    <internet>always</internet>
  </recommends>
  <supports>
    <control>pointing</control>
    <control>keyboard</control>
  </supports>
